<div class="apicontent">
    <div class="imagesearch">
        <img src="../assets/images/searchapi.png" style="width:350px; height: 300px;" class="girlreading">
    </div>
<div id="search">
    <form id="myform">
        <div class="input-field">
            <input type="search" id="search-box" class="form-control" placeholder="Search for Books" aria-describedby="button-addon2">
        </div>
        <button class="btn btn-search" type="button" id="search-btn">Search</button>
    </form>
  </div>
  <div class="results">
      <div class="allbooksdisplayed">
          {{#each books}}

              <div class="card-deck" id="{{id}}">
                  <div class="card">
                      <img class="card-img-top" src="{{volumeInfo.imageLinks.thumbnail}}" alt="">
                      <div class="card-body">
                          <h4 class="card-title">{{volumeInfo.title}}</h4>
                          <p class="card-text">By: {{volumeInfo.author}}</p>
                          <p class="price-text">Price: {{saleInfo.listPrice.amount}}</p>
                          <a class="btn btn-block addToCart" href="{{saleInfo.buyLink}}">Buy</a>
                      </div>
                  </div>
              </div>

          {{/each}}
      </div>
  </div>
</div>

<script src="../../assets/js/apibooks.js" type="text/javascript"></script>